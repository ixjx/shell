#!/usr/bin/perl -w
# created by Zhouliang
# fetch index and ip of cpe, and make a hash table

($sec,$min,$hour,$day,$mon,$year) = localtime;
($sec,$min,$hour,$day,$mon,$year) = (
    sprintf("%02d", $sec),
    sprintf("%02d", $min),
    sprintf("%02d", $hour),
    sprintf("%02d", $day),
    sprintf("%02d", $mon + 1),
    $year + 1900
);
$filenameprefix="/var/ip/" . $year . $mon . $day;
mkdir($filenameprefix,0777);

while(<>)
{
        $cmts = $_;

        chomp($cmts);
        $cmd = "snmpwalk -c cnt2001jsB -O uqx -v 2c " . $cmts . " 1.3.6.1.4.1.4491.2.1.20.1.3.1.2";
        foreach $_ (`$cmd`)
        {
                ($index, $mac1, $mac2, $mac3, $mac4, $mac5, $mac6) = /(\S+)\W+(\w+)\W+(\w+)\W+(\w+)\W+(\w+)\W+(\w+)\W+(\w+)/;
                @index = split(/\./,$index);
                $index = $index[9];
                $mac = $mac1 . $mac2 . "." . $mac3 . $mac4 . "." . $mac5 . $mac6;
                $indexmac{$index} = $mac;
        }


        $filename = $filenameprefix . "/" . $cmts;
        open(LOG, ">>$filename");

        $currenttime=localtime();

        $cmd = "snmpwalk -c cnt2001jsB -O uqx -v 2c " . $cmts . " 1.3.6.1.4.1.2011.6.180.1.1.20.6.1.3";
        foreach $_ (`$cmd`)
        {
                ($index, $ip1, $ip2, $ip3, $ip4) = /(\S+)\W+(\w+)\W+(\w+)\W+(\w+)\W+(\w+)/;
                @index = split(/\./,$index);
                $index = $index[10];
                $ip = $ip1 . "." . $ip2 . "." . $ip3 . "." .  $ip4;
                $log = $cmts . " " . $currenttime . "   " . $ip . "     " . $indexmac{$index} . "\n";
                print LOG $log;
        }
        close(LOG);
}
